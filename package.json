{
  "name": "colada",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint .",
    "sync:claude-marketplace": "node scripts/sync-claude-marketplace.js",
    "sync:test:claude-marketplace": "node scripts/sync-claude-marketplace-test-all-conditions.js",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "setup:githooks": "git config core.hooksPath .githooks"
  },
  "devDependencies": {
    "@colada/eslint-config": "workspace:*",
    "@colada/prettier-config": "workspace:*",
    "@colada/typescript-config": "workspace:*",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.0",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20"
  }
}